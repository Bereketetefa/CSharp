@model Activities
@using BeltExam.Models
    <style>
    body{
    background-image:radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
    }
    @* .navbar{
    background-image:radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);

    } *@
    .logo{
    font-size: 200px;
    }
    .container-fluid{
    text-align: center;
    margin: 25px 0;
    }
    .footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    white-space: nowrap;
    height: 33px;
    line-height: 60px;
    } 
    </style>
<div id="wrapper">
    <h1>Plan Your Activity</h1>
    <form asp-action="addActivity" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="Title"></span>
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
            <div class="form-group">
                <span asp-validation-for="Duration"></span>
                <label asp-for="Duration"></label>
                <input asp-for="Duration" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Hour"></span>
                <label asp-for="Hour"></label>
                <select asp-for="Hour" >
                    <option>Hr</option>
                    <option>Min</option>
                    <option>Days</option>
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="ActivityDate"></span>
                <label asp-for="ActivityDate"></label>
                <input asp-for="ActivityDate" class="form-control">
            </div>    
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
</div>