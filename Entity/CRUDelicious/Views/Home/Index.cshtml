@{
    ViewData["Title"] = "Dish Add";
}
@using CRUDelicious.Models
@model Dish
<style>
        .main_container {
                width: 900px;
                height: 600px;
                margin-left: 30px;
            }
</style>
<h1>Welcome to CRUDelicious</h1>
<form asp-action="process" class="col-5" method="post">
    <h2>Add a Dish!</h2>
    <div class="form-group">
        <label asp-for="Title">Name of Dish: </label>
        <input asp-for="Title" class="form-control">
        <span class="text-danger" asp-asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodType"> Food Type: </label>
        <input asp-for="FoodType" class="form-control">
        <span class="text-danger" asp-asp-validation-for="FoodType"></span>
    </div>
    <div class="form-group">
        <label asp-for="Chef"> Chef's Name: </label>
        <input asp-for="Chef" class="form-control">
        <span class="text-danger" asp-asp-validation-for="Chef"></span>
    </div>
    <div class="form-group">
        <label asp-for="Calories"># of Calories: </label>
        <input asp-for="Calories" class="form-control">
        <span class="text-danger" asp-asp-validation-for="Calories"></span>
    </div>
    @* <div class="form-group">
        <label asp-for="Tastiness">Tastiness:</label>
