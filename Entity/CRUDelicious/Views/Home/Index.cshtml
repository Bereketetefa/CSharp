        <span class="text-danger" asp-asp-validation-for="Tastiness"></span>
    </div> *@
    <div>
        <label>Tastiness:</label>
        <select asp-for="Tastiness">
        <span class="text-danger" asp-asp-validation-for="Tastiness"></span>
            <option>0</option>
