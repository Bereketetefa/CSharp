@model Plan
    <style>
    .jumbotron{
    background-color: #f4511e;
    color: #fff;
    }
    .logo{
    font-size: 200px;
    }
    .container-fluid{
    text-align: center;
    margin: 25px 0;
    }
    .footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    white-space: nowrap;
    height: 33px;
    line-height: 60px;
    } 
  
